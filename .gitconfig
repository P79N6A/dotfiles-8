[core]
    editor = vim
    pager = less -+$LESS -FRSX
    eol = lf
[user]
    name = Kane Dou
    email = douqilong@gmail.com
[color]
    branch = auto
    diff = auto
    status = auto
    grep = auto
    interactive = auto
    showbranch = auto
    ui = auto
[alias]
    a = add
    ap = add --patch
    br = branch
    bra = branch --all --verbose
    co = checkout
    c = commit
    cm = commit --message
    ca = commit --amend
    cam = commit --amend --message
    caa = commit --amend --no-edit
    cp = cherry-pick
    d = diff
    ds = diff --cached
    dt = difftool
    f = fetch
    lm = log --stat --summary --graph --decorate
    l1 = log --oneline --decorate --graph
    lp = log --oneline --decorate
    m = merge
    pl = pull
    ps = push
    plr = pull --rebase
    rmfs = rm --cache
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase --interactive
    ru = remote update
    rh = reset --hard
    s = show
    ss = stash
    ssa = stash apply
    ssl = stash list
    ssp = stash pop
    st = status --short --branch
    su = submodule update --recursive
[push]
    default = current
[diff]
    tool = diffmerge
[difftool]
    prompt = false
[merge]
    tool = diffmerge
    defaultToUpstream = true
[github]
    user = kols
[filter "gpg"]
    clean = "gpg2 --encrypt --recipient 'Dou Qilong'"
    smudge = "gpg2 --decrypt"
